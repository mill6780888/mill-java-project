extends layout

block content
  script(data-main="/main.js/#{appName}",src="/requirejs/require.js")
  style(rel="stylesheet",type="text/css").
    .gridStyle {
      border: 1px solid rgb(212,212,212);
      width: 100%; 
      height: 300px
    }
  div(ng-controller="MyCtrl")
    .gridStyle(ui-grid="gridOptions",ui-grid-edit,ui-grid-pagination,ui-grid-selection,ui-grid-exporter,ui-grid-resize-columns,ui-grid-auto-resize) 
  h1= title
  p Welcome to #{title}
